<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ThemeSelector"
             x:Class="ThemeSelector.App">
    <Application.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary Source="Resources/Themes/Dark.xaml"/>
        </ResourceDictionary>

        <x:Double x:Key="DefaultFontSize">20</x:Double>

        <SolidColorBrush x:Key="RadioButtonUncheckedBrush"
                         Color="{DynamicResource RadioButtonUncheckedColor}"/>

        <SolidColorBrush x:Key="RadioButtonCheckedBrush"
                         Color="{DynamicResource RadioButtonCheckedColor}"/>

        <SolidColorBrush x:Key="PrimaryForegroundBrush"
                     Color="{DynamicResource PrimaryForeground}"/>

        <SolidColorBrush x:Key="PrimaryBackgroundBrush"
                     Color="{DynamicResource PrimaryBackground}"/>

        <SolidColorBrush x:Key="EllipseBrush"
                     Color="{DynamicResource EllipseColor}"/>

    </Application.Resources>
    
</Application>
